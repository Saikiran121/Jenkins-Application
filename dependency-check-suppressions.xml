<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

    <!-- Robust suppression for MongoDB Node.js driver false positives -->
    <suppress>
        <notes><![CDATA[
        Suppressing all vulnerabilities for the mongodb npm package. 
        These are consistently misidentified as MongoDB Server vulnerabilities.
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/mongodb@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>

    <!-- Alternative match using CPE regex for the same issue -->
    <suppress>
        <notes><![CDATA[
        Suppressing any CPE match that incorrectly links any npm package to the mongodb server.
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/.*$</packageUrl>
        <cpe regex="true">cpe:2\.3:a:mongodb:mongodb:.*</cpe>
    </suppress>

</suppressions>
