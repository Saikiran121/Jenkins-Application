<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

    <!-- Suppress MongoDB server CVEs incorrectly mapped to Node driver -->
    <suppress>
        <packageUrl regex="true">pkg:npm/mongodb@7\.0\.0</packageUrl>
        <notes>
            MongoDB server CVEs incorrectly mapped to Node.js mongodb driver.
            Reviewed and accepted as not applicable.
        </notes>
    </suppress>

    <!-- Suppress legacy dev dependency time-span -->
    <suppress>
        <packageUrl regex="true">pkg:npm/time-span@5\.1\.0</packageUrl>
        <notes>
            Dev dependency via chai-http. Low risk and not runtime exploitable.
        </notes>
    </suppress>

</suppressions>
